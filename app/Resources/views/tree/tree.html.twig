{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('stylesheets/tree_page.css') }}" type="text/css" rel="stylesheet"/>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('scripts/plugins/jquery-ui.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('scripts/tree_page.js') }}" type="text/javascript"></script>
{% endblock %}

{% block header %}
    <header>
        {% embed ':default:nav_bar.html.twig' %}
        {% endembed %}
    </header>
{% endblock %}

{% block body %}
    <section class="tree-playground">
        <div id="playground" class="row fill">
            <div class="col-md-10">
                <table class="table" style="table-layout: fixed;">
                    <thead>
                        <tr class="col-xs-1"></tr>
                        <tr class="col-xs-1"></tr>
                        <tr class="col-xs-1"></tr>
                    </thead>
                    <tbody>
                    {% for i in 0..10 %}
                        <tr>
                            <td>
                                <div class="tree-container">

                                </div>
                            </td>
                            <td>
                                <div class="tree-container">

                                </div>
                            </td>
                            <td>
                                <div class="tree-container">

                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div id="treeContainer" class="tree-container">

                </div>
            </div>
            <div class="col-md-2 family-manager">
                <div class="row">
                    <div class="col-md-12 person-container">
                        <div>
                        {% for i in 0..30 %}
                            <div class="draggableTest person-item">Test{{i}}</div>
                        {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
