{% extends 'base.html.twig' %}

{% block header %}
    <div id="nav-bar" class="nav-bar">
        <div class="container">
            {% block navbar %}
                <div class="nav-btn">{{ 'home.page'|trans }}</div>
                <div class="nav-btn">{{ 'tree.page'|trans }}</div>
            {% endblock %}
        </div>
    </div>
{% endblock %}

{% block body %}
    <section class="posts">
        <div class="row index">
            <aside class="col-md-4">
                <div class="about-me">
                    <div class="title">
                        {{ 'about.me'| trans }}
                    </div>
                    <div class="image">
                        {% if aboutInfo.getImage() != null %}
                            <img src="" alt="Image">
                        {% endif %}
                    </div>
                    <div class="desc">
                        {{ aboutInfo.getDesc() }}
                    </div>
                </div>
            </aside>
            <div class="col-md-8">
                {% include 'default/posts.html.twig' %}
            </div>
        </div>
    </section>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset('stylesheets/index.css') }}"
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('scripts/index.js') }}"></script>
{% endblock %}
