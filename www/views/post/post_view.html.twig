{% extends 'base.html.twig' %}

{% block title %}
    {{ post.title }} | {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset("stylesheets/post_view.css") }}"/>
{% endblock %}

{% block header %}
    <header>
        <div class="img">
            <div class="app-title">DrzewoGosi</div>
        </div>
        {% embed 'default/nav_bar.html.twig' %}
        {% endembed %}
    </header>
{% endblock %}

{% block body %}
    <section class="post-view-page">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="content">
                        <h2>{{ post.title }}</h2>
                        {% set author = post.modifiedBy is null ? post.author : post.modifiedBy %}
                        <p class="timestamp-user">{{ post.timeStamp }} {{ trans("modified-by") }} {{ author }}</p>
                        <hr>
                        <p>{{ post.content }}</p>
                        {% if post.images|length > 0 %}
                            <hr>
                            <div>
                                {% for image in post.images %}
                                    <img src="{{ image }}" class="img-thumbnail">
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset("scripts/post_view.js") }}" type="text/javascript"></script>
{% endblock %}
