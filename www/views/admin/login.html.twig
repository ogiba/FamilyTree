{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset('stylesheets/login_page.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('scripts/login_page.js') }}" type="text/javascript"></script>
{% endblock %}

{% block title %}
    Login
{% endblock %}

{% block header %}
    <header>
        {% embed 'default/nav_bar.html.twig' %}
            {% block nav_items %}
                {{ parent() }}
            {% endblock %}
        {% endembed %}
    </header>
{% endblock %}

{% block body %}
    <section class="login-page">
        <div class="container">
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <div class="form">
                        <div class="row">
                            <h1 class="h3 mb-3 font-weight-normal">{{ trans("admin-login-message") }}</h1>
                            <div class="col-md-12 login-info">
                                <label id="loginInfo"></label>
                                <div class="progress">
                                    <div class="indeterminate"></div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <input id="usernameInput" class="form-control" placeholder="{{ trans("admin-login-name-hint") }}" type="text"
                                    data-email-error-format="{{ trans("admin-login-email-format-error") }}">
                            </div>
                            <div class="col-md-12">
                                <input id="passwordInput" class="form-control" placeholder="{{ trans("admin-login-pw-hint") }}" type="password">
                            </div>
                            <div class="col-md-12">
                                <button id="submit" class="btn btn-primary">{{ trans("admin-login-btn-label") }}</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4"></div>
            </div>
        </div>
    </section>
{% endblock %}