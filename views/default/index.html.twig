{% extends 'base.html.twig' %}

{% block header %}
    <header>
        <div class="img">
            <div class="app-title">DrzewoGosi</div>
        </div>
        {% include 'default/nav_bar.html.twig' %}
    </header>
{% endblock %}

{% block body %}
    <section class="about">
        <div class="row">
            <div class="col-md-12">
                {% include 'default/about_me.html.twig' %}
            </div>
        </div>
    </section>

    <section class="posts">
        <div class="row">
            <div class="col-md-12 transition">
                <div class="triangle-bottomleft">

                </div>
            </div>
        </div>
        <div class="row index">
            <div class="col-md-12">
                {% include 'default/posts.html.twig' %}
            </div>
        </div>
    </section>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset('stylesheets/index.css') }}"
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('scripts/index.js') }}"></script>
{% endblock %}
