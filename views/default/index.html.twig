{% extends 'base.html.twig' %}

{% block header %}
    <header>
        <div class="img">
            <div class="app-title">DrzewoGosi</div>
        </div>
        {% include 'default/nav_bar.html.twig' %}
    </header>
{% endblock %}

{% block body %}
    <section class="about">
        <div class="row">
            <div class="col-md-12">
                {% include 'default/about_me.html.twig' %}
            </div>
        </div>
    </section>

    <section class="posts">
        <div class="row transition">
            <div class="col-md-12">
                <div class="triangle">
                    <div class="">

                    </div>
                </div>
            </div>
        </div>
        <div class="row index">
            <div class="col-md-12">
                {% include 'default/posts.html.twig' %}
            </div>
        </div>
    </section>
    <div id="cookieInfo" class="alert alert-success cookies-alert" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <div class="alert-heading">
            <b>{{ trans("attention") }}!</b>
        </div>
        <p>
            {{ trans("cookies-info") }}
        </p>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset('stylesheets/index.css') }}"
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('scripts/index.js') }}"></script>
    <script>
        window.dataLayer = window.dataLayer || [];

        function gtag() {
            dataLayer.push(arguments);
        }

        gtag('js', new Date());

        gtag('config', 'UA-115060426-1');
    </script>
{% endblock %}
