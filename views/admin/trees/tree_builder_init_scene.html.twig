{% extends 'admin/base_admin.html.twig' %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset("scripts/tree_builder/tree_builder_init.js") }}" type="text/javascript"></script>
{% endblock %}

{% block title %}
    {#{{ trans("admin-view-scene-title") }}#}
    {{ trans("admin-tree-builder") }}
{% endblock %}

{% block body %}
    <section class="post-page">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <h4 class="card-header">
                            <div class="row">
                                <div class="col-md-12">{{ trans("admin-new-tree-title") }}</div>
                            </div>
                        </h4>
                        <div class="card-body">
                            <input id="familyNameInput" placeholder="{{ trans("admin-new-tree-name-input") }}"
                                   type="text">
                        </div>
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="btn btn-success" onclick="saveFamily()">{{ trans("add") }}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% block customView %}
            {% endblock %}
        </div>
    </section>
{% endblock %}