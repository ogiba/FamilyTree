{% extends 'admin/base_admin.html.twig' %}

{% block title %}
    {#{{ trans("admin-view-scene-title") }}#}
    Tree Builder - Members list | {{ trans("app-name") }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset("scripts/plugins/dropzone.js") }}"></script>
    <script src="{{ asset("scripts/tree_builder/members_list.js") }}" type="text/javascript"></script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link type="text/css" rel="stylesheet" href="{{ asset("stylesheets/dropzone.min.css") }}">
    <link href="{{ asset("stylesheets/trees_view.css") }}" type="text/css" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <section class="trees-page">
        <h3>{{ trans("admin-member-list-title") }}: {{ family.familyName }}</h3>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="actions">
                            <button class="btn btn-success"
                                    onclick="window.location.href = '/admin/tree_builder/'">{{ trans("admin-action-edit-tree-structure") }}
                            </button>
                            <button class="btn btn-primary"
                                    onclick="window.location.href = '/admin/tree_builder/new_member'">{{ trans("admin-action-add-new-member") }}
                            </button>
                        </div>
                        <h4 class="card-header">
                            <div class="row">
                                <div class="col-md-12"></div>
                            </div>
                        </h4>
                        <div class="card-body">
                            <div class="row">
                                <div id="alertContainer" class="col-md-12">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div id="membersContainer">
                                        <ul>
                                            {% for familyMember in familyMembers %}
                                                <li>
                                                    <span onclick="loadSelectedMemberToView({{ familyMember.id }})">{{ familyMember.firstName }} {{ familyMember.lastName }}</span>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                                <div id="rightContainer" class="col-md-6">
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-md-12">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% block customView %}
            {% endblock %}
        </div>
    </section>
{% endblock %}