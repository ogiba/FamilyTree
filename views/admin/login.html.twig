{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset('stylesheets/login_page.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('scripts/login_page.js') }}" type="text/javascript"></script>
{% endblock %}

{% block title %}
    Login
{% endblock %}

{% block header %}
    <header>
        {% embed 'default/nav_bar.html.twig' %}
        {% endembed %}
    </header>
{% endblock %}

{% block body %}
    <section class="login-page">
        <div class="container">
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <div class="form">
                        <div class="row">
                            <div class="col-md-12">
                                <label>Username</label>
                            </div>
                            <div class="col-md-12">
                                <input id="usernameInput" type="text">
                            </div>
                            <div class="col-md-12">
                                <label>Password</label>
                            </div>
                            <div class="col-md-12">
                                <input id="passwordInput" type="password">
                            </div>
                            <div class="col-md-12">
                                <button id="submit" class="btn btn-primary">Login</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4"></div>
            </div>
        </div>
    </section>
{% endblock %}