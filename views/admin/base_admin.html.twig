{% extends "base.html.twig" %}

{% block title %}
    Admin panel
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset("stylesheets/panel_page.css") }}">
{% endblock %}

{% block header %}
    <header>
        {% embed 'default/nav_bar.html.twig' %}
            {% block nav_items %}
                {{ parent() }}
                {% if userLogged %}
                    <div class="nav-btn" onclick='navigateToScene("/admin")'>{{ trans("admin-posts") }}</div>
                    <div class="nav-btn" onclick='navigateToScene("/admin/sections")'>{{ trans("admin-sections") }}</div>
                    <div class="nav-btn" onclick='navigateToScene("/admin/logout")'>{{ trans("admin-logout") }}</div>
                {% endif %}
            {% endblock %}
        {% endembed %}
    </header>
{% endblock %}