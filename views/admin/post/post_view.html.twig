{% extends 'admin/base_admin.html.twig' %}

{% block title %}
    Post details
{% endblock %}

{% block body %}
    <section class="post-page">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        {% block postModified %}
                            <div class="actions">
                                <button class="btn btn-warning" onclick="window.location.href = '/admin/post/edit?id={{ post.id }}'">Edit</button>
                            </div>
                        {% endblock %}
                        <h4 class="card-header">
                            <div class="row">
                                <div class="col-md-8">Title</div>
                                <div class="col-md-4">
                                    <div class="date">
                                        Modified: <span>{{ post.timeStamp }}</span>
                                    </div>
                                </div>
                            </div>
                        </h4>
                        <div class="card-body">
                            {% block postTitle %}
                                <h4 class="card-title">{{ post.title }}</h4>
                            {% endblock %}
                        </div>
                        <h4 class="card-header">Content</h4>
                        <div class="card-body description">
                            {% block postContent %}
                                <p class="card-text">{{ post.content }}</p>
                            {% endblock %}
                        </div>
                        {% block postImage %}
                            <h4 class="card-header">Images <span></span></h4>
                            <div class="card-body">
                                {% if post.images|length > 0 %}
                                    <img class="card-img-bottom" src="..." alt="Card image cap">
                                    {#<img src="..." alt="..." class="img-thumbnail">#}
                                {% endif %}
                            </div>
                        {% endblock %}
                    </div>
                </div>
            </div>
            {% block customView %}
            {% endblock %}
        </div>
    </section>
{% endblock %}