<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div style="text-align: center;">
                    <img src="" alt="memberImage">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div>First name</div>
                <div>{{ selectedMember.firstName }}</div>
            </div>
            <div class="col-md-6">
                <div>Last name</div>
                <div>{{ selectedMember.lastName }}</div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div>Maiden name</div>
                <div>{{ selectedMember.maidenName }}</div>
            </div>
            <div class="col-md-6">
                <div>Partner</div>
                {% set partner = selectedMember.partner %}
                <div>{{ partner is null ? "None" : partner.firstName ~" "~ partner.lastName }}</div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div>Birth date</div>
                {% set birthDate = selectedMember.birthDate %}
                <div>{{ birthDate is null or birthDate is empty ? "---" : birthDate }}</div>
            </div>
            <div class="col-md-6">
                <div>Death date</div>
                {% set deathDate = selectedMember.deathDate %}
                <div>{{ deathDate is null or deatDate is empty ? "---" : deathDate }}</div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div>First parent</div>
                {% set firstParent = selectedMember.firstParent %}
                <div>{{ firstParent is null or firstParent is empty ? "---" : firstParent.firstName ~" "~ firstParent.lastName}}</div>
            </div>
            <div class="col-md-6">
                <div>Second parent</div>
                {% set secondParent = selectedMember.secondParent %}
                <div>{{ secondParent is null or secondParent is empty ? "---" : secondParent.firstName ~" "~ secondParent.lastName}}</div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>
</div>